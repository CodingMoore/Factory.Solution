@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Machine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.MachineName): @Html.DisplayFor(model => model.MachineName)</h3> @Html.ActionLink("Edit Info", "EditInfo", "Machines", new {id = Model.MachineId}, new { @class = "btn" })
<h3>@Html.DisplayNameFor(model => model.InstallDate): @Model.InstallDate.ToString("MM-dd-yyyy")</h3> @Html.ActionLink("Edit Date", "EditDate", "Machines", new {id = Model.MachineId}, new { @class = "btn" })

@if(Model.JoinEntries.Count == 0)
{
  <p>This machine does not have any certified engineers.</p>
}
else
{
  <h4>Engineers certified for this machine:</h4>
  @* <ul>
    @foreach(var join in Model.Engineers)
    {
      <li>@join.Engineer.EngineerName</li>
    }
  </ul> *@
}

<ul>
  @foreach(var join in Model.JoinEntries)
  {
    <li>@join.Engineer.EngineerName</li>
    @using (Html.BeginForm("DeleteEngineer", "Machines"))
    {
      @Html.Hidden("joinId", @join.EngineerMachineId)
      @Html.HiddenFor(model => model.MachineId)
      <input type="submit" value="Delete"/>
    }
  }
</ul>

@using (Html.BeginForm("AddEngineer", "Machines"))
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Add an Engineer")
  @Html.DropDownList("EngineerId", "*select*")
  

  <input type="submit" value="Add"/>

  @* <input type="submit" value="Add" formaction=@Url.Action("AddEngineer") formmethod="post"/> *@
}
  
